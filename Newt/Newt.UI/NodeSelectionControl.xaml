<UserControl x:Class="Salamander.UI.NodeSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Salamander.UI"
             xmlns:fb="clr-namespace:FreeBuild.WPF;assembly=FreeBuild.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <fb:TextFieldControl 
                            Label="Name:"
                            Value="{Binding Path=Name}">
            </fb:TextFieldControl>
            <fb:XYZControl
                Label="Position:"
                XValue="{Binding Path=X}"
                YValue="{Binding Path=Y}"
                ZValue="{Binding Path=Z}"/>
        </StackPanel>
    </Grid>
</UserControl>
