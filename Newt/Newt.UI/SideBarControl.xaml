<UserControl x:Class="Salamander.UI.SideBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Salamander.UI"
             xmlns:fb="clr-namespace:Freebuild.WPF;assembly=Freebuild.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Salamander.UI;component/Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Name="LayoutBase">
        <ScrollViewer HorizontalScrollBarVisibility="Hidden">
            <StackPanel>
                <fb:PropertiesExpander HeaderContent="Linear Elements"  DataContext="{Binding Path=Selected.LinearElements}">
                    <local:LinearElementSelectionControl/>
                </fb:PropertiesExpander>
            </StackPanel>
        </ScrollViewer> 
    </Grid>
</UserControl>
