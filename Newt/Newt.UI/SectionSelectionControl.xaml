                                              ToolTip="The root fillet radius of the section profile"
                                              Value="{Binding Path=RootRadius}"
                                              Maximum="1" TickFrequency="0.001"
                                              Units="m"
                                              Visibility="{Binding Path=RootRadius, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
