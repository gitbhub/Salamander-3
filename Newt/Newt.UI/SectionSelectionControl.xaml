                <fb:SliderFieldControl Label="Diameter:"
                                              ToolTip="The outer diameter of the section profile"
                                              Value="{Binding Path=Diameter}"
                                              Maximum="2.0" TickFrequency="0.001"
                                             Units="m"
                                              Visibility="{Binding Path=Diameter, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>  
            <fb:SliderFieldControl Label="Flange Thickness:"
                                              ToolTip="The flange thickness of the section profile"
                                              Value="{Binding Path=FlangeThickness}"
                                              Maximum="1" TickFrequency="0.001"
                                              Units="m"
                                              Visibility="{Binding Path=FlangeThickness, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                <fb:SliderFieldControl Label="Web Thickness:"
                                              ToolTip="The web thickness of the section profile"
                                              Value="{Binding Path=WebThickness}"
                                              Maximum="1" TickFrequency="0.001"
                                              Units="m"
                                              Visibility="{Binding Path=WebThickness, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
