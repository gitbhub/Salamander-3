<UserControl x:Class="Salamander.UI.SectionSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Salamander.UI"
             xmlns:fb="clr-namespace:Freebuild.WPF;assembly=Freebuild.WPF"
             xmlns:converters="clr-namespace:Freebuild.WPF.Converters;assembly=Freebuild.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:AlwaysVisibleConverter x:Key="AlwaysVisibleConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel DataContext="{Binding Path=Property}">
            <Border BorderBrush="Black" BorderThickness="0" Margin="2" Background="White" Height="200">
                <Viewbox Height="200" Width="200">
                    <Border>
                        <fb:ProfileCanvas Profiles="{Binding Path=Profiles}" Width="2" Height="2"/>
                    </Border>
                </Viewbox>
            </Border>
            <StackPanel DataContext="{Binding Profile}">
