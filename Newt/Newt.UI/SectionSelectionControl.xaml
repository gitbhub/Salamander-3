                                              Units="m"
                                              Visibility="{Binding Path=Depth, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                                            <!--Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"-->
                <fb:SliderFieldControl Label="Width:"
                                              ToolTip="The overall width of the section profile"
                                              Value="{Binding Path=Width}"
                                              Maximum="2.0" TickFrequency="0.001"
                                              Units="m"
                                              Visibility="{Binding Path=Width, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                <!--Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"-->
                <!--<fb:SliderFieldControl Label="Top Width:"
                                              ToolTip="The width of the top flange of the section profile"
                                              Value="{Binding Path=Section.TopFlangeWidth, Converter={StaticResource SingleToDoubleConverter}}"
                                              Maximum="2.0" TickFrequency="0.001"
                                              Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"
                                              Visibility="{Binding Path=Section.TopFlangeWidth, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                <fb:SliderFieldControl Label="Top Width:"
                                              ToolTip="The width of the top of the section profile"
                                              Value="{Binding Path=Section.TopWidth, Converter={StaticResource SingleToDoubleConverter}}"
                                              Maximum="2.0" TickFrequency="0.001"
                                              Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"
                                              Visibility="{Binding Path=Section.TopWidth, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                <fb:SliderFieldControl Label="Bottom Width:"
                                              ToolTip="The width of the bottom flange of the section profile"
                                              Value="{Binding Path=Section.BottomFlangeWidth, Converter={StaticResource SingleToDoubleConverter}}"
                                              Maximum="2.0" TickFrequency="0.001"
                                              Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"
                                              Visibility="{Binding Path=Section.BottomFlangeWidth, Converter={StaticResource AlwaysVisibleConverter}, FallbackValue=Collapsed}"/>
                <fb:SliderFieldControl Label="Base Width:"
                                              ToolTip="The width of the base of the section profile"
                                              Value="{Binding Path=Section.BaseWidth, Converter={StaticResource SingleToDoubleConverter}}"
                                              Maximum="2.0" TickFrequency="0.001"
                                              Units="{Binding Path=Document.Design.Units.Distance, Converter={StaticResource LengthUnitConverter}}"
